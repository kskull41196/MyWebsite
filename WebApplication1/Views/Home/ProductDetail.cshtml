@model Tuple<WebApplication1.Models.tbl_item, List<WebApplication1.Models.tbl_item>>
@{
    ViewBag.Title = "ProductDetail";
    Layout = "~/Views/Shared/_LayoutWebsite.cshtml";
}
<div class="product_all">
    
    <!-- Show detail of chosen product -->
    <h2 class="title_f_p_m_gh_pro">
        <span>Chi Tiết Sản Phẩm</span>
    </h2>
    <li class="li_pro_all_ col-md-4 col-sm-3 col-xs-2 clearfix">
        <div class="category-item">
            <div class="category">
                <div class="category-s"></div>
                <div class="category-outer-1"></div>
                <div class="category-outer-2"></div>
                <div class="category-inner">
                    <div class="category-img">
                        <a href="">
                            <img src="images/item/13570287_1781799642052478_608269088_o-146.jpg" alt="Kem dưỡng trắng da mặt">
                        </a>
                    </div>
                    <div class="category-name">
                        <a href="">
                            @Model.Item1.name
                        </a>
                    </div>
                    <div class="event-price">
                        <div class="price_prod_mau_gh" title="Kem dưỡng trắng da mặt">
                            <p class="sell-price">Giá thực: @Model.Item1.price VND</p>
                        </div>
                    </div>
                    <div class="detail_short">
                        <p>@Model.Item1.detail_short</p>
                    </div>
                    <div class="btnGioHang"><a href=""><span>Thêm vào giỏ hàng</span></a></div>
                    <div class="clearfix"></div>

                    <label>Số lượng</label>
                    <input type="number" min="0" maxlength="3" />
                </div>
                <div class="category-outer-3"></div>
                <div class="category-outer-4"></div>
                <div class="clearfix"></div>
            </div>
        </div>
    </li>



    <br/>
